push = :
fixups =
    chmod 755 $HOME/src
    # ln -nsf "$HOME/src/github.com" "$HOME/src/gh"
    mkdir -p $HOME/.local/share/mc/skins
    ln -sf "$MR_REPO/skins/dracula.ini" $HOME/.local/share/mc/skins/dracula.ini
