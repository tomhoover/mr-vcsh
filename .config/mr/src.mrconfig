[src/github.com/adrianlopezroche/fdupes]
checkout =
    git clone 'git@github.com:tomhoover/fdupes.git' 'fdupes'
    cd "$MR_REPO"
    git remote add upstream git://github.com/adrianlopezroche/fdupes.git
    git fetch upstream

